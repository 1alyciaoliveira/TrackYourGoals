<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<div class="section">
  <h1 class="title has-text-centered">Goal</h1>
  <div class="columns">
    <div class="column">
      <div class="box">
        <h2 class="title">History</h2>
        <table class="table">
          <thead>
            <tr>
              <th><abbr title="date">Date</abbr></th>
              <th><abbr title="amount">Amount</abbr></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>1/1/2021</th>
              <td>+ $100</td>
            </tr>
            <tr>
              <th>1/2/2021</th>
              <td>+ $200</td>
            </tr>
            <tr>
              <th>1/3/2021</th>
              <td>- $300</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="column">
      <div class="box">
        <h2 class="title">Pie Chart</h2>
        <p>You have saved $10000 from your $500000 goal.</p>
        <figure class="image is-128x128">
          <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
        </figure>
      </div>
    </div>
  </div>
</div>
<div class="section">
  <div class="columns">
    <div class="column">
      <div class="box">
        <h2 class="title">Transaction Chart</h2>
        <canvas id="transactionChart"></canvas>
      </div>
    </div>

    <div class="column">
      <div class="box">
        <h2 class="title">Buttons</h2>
        <div class="buttons are-small">
          <button class="button">Add money</button>
          <button class="button">Remove money</button>
          <button class="button" id="edit-goal" onclick="openModal();" class="button is-success">Edit Goal</button>
          <button class="button">Erase goal</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal" id="modal1">
    <div class="modal-background"></div>
    <div class="modal-card">
      <div class="field mr-3 ml-3 mt-3 label"> Edit Objective</div>

      <div class="field mr-3 ml-3">
        <label class="label">Objective</label>
        <div class="control">
          <input id="objective" class="input" type="text" placeholder="">
        </div>
      </div>

      <div class="field mr-3 ml-3">
        <label class="label">Amount to save ($)</label>
        <div class="control has-icons-left has-icons-right">
          <input id="target-quantity" class="input is-success" type="text" placeholder="Text input" value="$">
          <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
      </div>

      <div class="field mr-3 ml-3">
        <label class="label">Time Target (# of weeks)</label>
        <div class="control">
          <div id="time-target" class="select">
            <select>
              <option>Select dropdown</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
              <option>6</option>
              <option>7</option>
              <option>8</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field mr-3 ml-3">
        <label class="label">Description</label>
        <div class="control">
          <textarea id="description" class="textarea" placeholder=""></textarea>
        </div>
      </div>

      <div class="field is-grouped mr-3 ml-3">
        <div class="control">
          <button class="button is-link">Submit</button>
        </div>
      </div>

      <footer class="modal-card-foot">
        <button class="button is-danger">
          Cancel
        </button>
      </footer>
    </div>
  </div>



  <script src="./js/goal.js"></script>