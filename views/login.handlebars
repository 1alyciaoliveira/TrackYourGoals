<div class="hero is-fullheight">
  <div class="hero-body is-justify-content-center is-align-items-center">
    <div id="login-form">
      <div class="column">
        <label for="email">Email/Username</label>
        <input id="email" class="input is-primary" type="text" placeholder="Email address/Username">
      </div>
      <div class="column">
        <label for="password">Password</label>
        <input id="password" class="input is-primary" type="password" placeholder="Password">
        <a class="is-size-7 has-text-primary">Forgot password?</a>
      </div>
      <div class="column">
        <button id="login" class="button is-primary is-fullwidth" type="submit">Login</button>
      </div>
      <div class="has-text-centered">
        <p class="is-size-7"> Don't have an account? <a href="/register" class="has-text-primary" id="signup-link">Sign up</a>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="container" id="signup-form">
    <h1 class="title">Sign up</h1>
    <p class="subtitle">Create your account</p>

        <div class="field">
        <label class="label">Email</label>
        <div class="control has-icons-left has-icons-right">
            <input id="email-signup" class="input" type="text" placeholder="Text input" value="example@email.com">
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
              </span>
            </div>
        </div>

<div class="field">
    <label class="label">Username</label>
    <div class="control has-icons-left has-icons-right">
        <input id="username-signup" class="input" type="text" placeholder="Text input" value="Create your Username">
        <span class="icon is-small is-left">
            <i class="fas fa-user"></i>
          </span>
          <span class="icon is-small is-right">
            <i class="fas fa-check"></i>
          </span>
        </div>
        <p class="help is-success">This username is available</p>
    </div>

<div class="field">
    <label class="label">Create password</label>
    <div class="control has-icons-left has-icons-right">
        <input id="password-signup" class="input" type="text" placeholder="Text input" value="Password">
        <span class="icon is-small is-left">
            <i class="fa-solid fa-lock"></i>
          </span>
    </div>
</div>

<div class="field">
    <label class="label">Confirm password</label>
    <div class="control has-icons-left has-icons-right">
        <input id="confirm-password-singup" class="input" type="text" placeholder="Text input" value="Password">
        <span class="icon is-small is-left">
            <i class="fa-solid fa-lock"></i>
          </span>
    </div>
</div>

<div class="control">
    <button id="signup" class="button is-primary">Sign up</button>
</div>

<div class="text">
    <p>Already have an account? <a href="/login">Login here!</a></p>
</div>

</div>

<script src="https://kit.fontawesome.com/51d0cae634.js" crossorigin="anonymous"></script>

<script src="./js/script.js"></script>
